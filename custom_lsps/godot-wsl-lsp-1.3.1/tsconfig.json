{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "vitest/globals"],
    "noEmit": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "bin"]
}
